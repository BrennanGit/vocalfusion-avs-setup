pcm_slave.i2s48 {
    pcm "plughw:1,0"
    format S32_LE
    rate 48000
}
pcm.!default {
    type asym
    playback.pcm {
        type plug
        slave i2s48
    }
    capture.pcm {
        type plug
        slave i2s48
    }
}
ctl.!default {
    type asym
    playback.pcm {
        type hw
        card 0
    }
    capture.pcm {
        type plug
        slave.pcm "monocard"
    }
}
