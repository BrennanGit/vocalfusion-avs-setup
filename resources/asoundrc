pcm_slave.i2s48k {
    pcm "plughw:1,0"
    format S32_LE
    rate 48000
}
pcm.!default {
    type asym
    playback.pcm {
        type plug
        slave i2s48k
    }
    capture.pcm {
        type plug
        slave i2s48k
    }
}
ctl.!default {
    type asym
    playback.pcm {
        type plug
        slave i2s48k
    }
    capture.pcm {
        type plug
        slave i2s48k
    }
}
